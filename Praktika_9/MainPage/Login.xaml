<Page x:Class="Praktika_9.MainPage.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika_9.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите пароль" Style="{StaticResource label1}"/>
            <TextBox Text="" Style="{StaticResource TextBox}" x:Name="txbLogin"/>
            <Label Content="Введите пароль" Style="{StaticResource label1}" />
            <PasswordBox Style="{StaticResource PasswordBox}" x:Name="psbPassword"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnIn" Content="Войти" Style="{StaticResource ButtonG}" Click="btnIn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
